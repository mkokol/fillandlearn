<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Fill & Learn{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {% stylesheets '@normalize_css' '@bootstrap_css' '@AppBundle/Resources/public/css/common.css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <div class="container">
        <div class="header clearfix">
            <h3 class="text-muted visible-xs-block pull-left">F&L</h3>
            <h3 class="text-muted hidden-xs pull-left">Fill & Learn</h3>
            {{ render(controller('AppBundle:Common/Menu:get', {})) }}
        </div>

        {% block content %}{% endblock %}

        <footer class="footer">
            <p>&copy; Company 2015</p>
        </footer>
    </div>
    {% javascripts '@jquery' '@bootstrap_js' '@jquery_form' '@jquery_knob' '@AppBundle/Resources/public/js/common.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
    </script>
    {% block javascripts %}{% endblock %}
</body>
</html>
