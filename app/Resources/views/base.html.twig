<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Fill & Learn{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {% stylesheets '@normalize_css' '@bootstrap_css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
    <style>
        body {
            padding-bottom: 20px;
            padding-top: 20px;
        }

        .container {
            max-width: 980px;
        }

        .header {
            margin-bottom: 30px;
            padding-bottom: 1px;
            border-bottom: 1px solid #e5e5e5;
        }

        .header, .footer {
            padding-left: 0;
            padding-right: 0;
        }

        .header h3 {
            line-height: 40px;
            margin-bottom: 0;
            margin-top: 0;
        }

        .header .nav-tabs {
            border: none;
            margin: 0;
        }
        .header .nav-tabs > li {
            margin-right: 2px;
            border-bottom: 4px solid #ffffff;
        }
        .header .nav-tabs > li > a {
            border: 0;
            margin-right: 0;
            color: #737373;
        }
        .header .nav-tabs > li:hover {
            border-bottom: 4px solid #cbcbcb;
        }
        .header .nav-tabs > li:hover > a {
            border: 0;
            background: none !important;
            color: #333333;
        }
        .header .nav-tabs > li.active {
            border-bottom: 4px solid #e5e5e5;
            background: none !important;
            position: relative;
        }
        .header .nav-tabs > li.active > a {
            border: 0;
            color: #333333;
        }
        .header .nav-tabs > li.active > a > i {
            color: #404040;
        }

        .footer {
            border-top: 1px solid #e5e5e5;
            color: #777;
            padding-top: 19px;
            margin-top: 30px;
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <div class="container">
        <div class="header clearfix">
            <h3 class="text-muted visible-xs-block pull-left">F&L</h3>
            <h3 class="text-muted hidden-xs pull-left">Fill & Learn</h3>
            {{ render(controller('AppBundle:Common/Menu:get', {})) }}
        </div>

        {% block content %}{% endblock %}

        <footer class="footer">
            <p>&copy; Company 2015</p>
        </footer>
    </div>
    {% javascripts '@jquery' '@bootstrap_js' '@jquery_form' '@jquery_knob' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        $(document).ready(function () {
            $('.link-as-form').click(function () {
                var $form = $('<form/>').hide();
                var url = ($(this).data('url')) ? $(this).data('url') : $(this).attr('href');

                $form.attr({'action': url, 'method': 'post'});
                $form.append($('<input/>', {
                    type: 'hidden',
                    name: '_method'
                }).val($(this).data('method')));

                if ($(this).data('csrf')) {
                    var csrf = $(this).data('csrf').split(':');
                    $form.append($('<input/>', {
                        type: 'hidden',
                        name: csrf[0]
                    }).val(csrf[1]));
                }

                $(this).parent().append($form);

                $form.submit();

                return false;
            });
            $('.load-modal').click(function () {
                $('body').append('<div id="modal" class="modal fade"/>');
                $('#modal').load($(this).data('url'), function () {
                    $('#modal').modal('show');
                    $('#modal').bind('hidden.bs.modal', function () {
                        $('#modal').remove();

                        if (typeof modalRemove !== 'undefined' && $.isFunction(modalRemove)) {
                            modalRemove();
                        }
                    });

                    if (typeof modalInit !== 'undefined' && $.isFunction(modalInit)) {
                        modalInit();
                    }
                });

                return false;
            });
            $('.link').click(function(){
                document.location.href = $(this).data('url');
            })
        });
    </script>
    {% block javascripts %}{% endblock %}
</body>
</html>
