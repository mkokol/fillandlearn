{% extends "::base.html.twig" %}

{% block title %}Vocabulary.{% endblock %}

{% block content %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Vocabulary</th>
            <th style="width: 120px;"></th>
        </tr>
        </thead>
        <tbody>
        {% for vocabulary in vocabularies %}
            <tr>
                <td>
                    <a href="{{ path('vocabulary_view', {'vocabularyId': vocabulary.vocabularyId}) }}">
                        {{ vocabulary.primaryLanguage.name }} - {{ vocabulary.secondaryLanguage.name }}
                    </a>
                </td>
                <td style="text-align: right;">
                    {% spaceless %}
                    <a class="load-modal" href="#"
                       data-url="{{ path('vocabulary_edit', {'vocabularyId': vocabulary.vocabularyId}) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    &nbsp;
                    <a class="link-as-form" data-method="delete"
                       href="{{ path('vocabulary_delete', {'vocabularyId': vocabulary.vocabularyId}) }}">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                    {% endspaceless %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-primary load-modal" data-url="{{ path('vocabulary_add') }}">
        Add Vocabulary
    </button>
{% endblock %}
