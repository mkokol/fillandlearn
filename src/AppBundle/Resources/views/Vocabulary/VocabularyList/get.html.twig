{% extends "::base.html.twig" %}

{% block title %}Vocabulary.{% endblock %}
{% block javascripts %}
    <script>
        $('.link-as-form').click(function () {
            var $form = $('<form/>').hide();
            $form.attr({
                'action': $(this).attr('href'),
                'method': 'post'
            });
            $form.append($('<input/>', {
                type: 'hidden',
                name: '_method'
            }).val($(this).data('method')));

            if ($(this).data('csrf')) {
                var csrf = $(this).data('csrf').split(':');
                $form.append($('<input/>', {
                    type: 'hidden',
                    name: csrf[0]
                }).val(csrf[1]));
            }

            $(this).parent().append($form);

            $form.submit();

            return false;
        });
        $('.load-modal').click(function () {
            $('body').append('<div id="modal" class="modal fade"/>');
            $('#modal').load($(this).data('url'), function(){
                $('#modal').modal('show');
                $('#modal').bind('hidden.bs.modal', function () {
                    $('#modal').remove();
                });

                if (typeof modalInit !== 'undefined' && $.isFunction(modalInit)) {
                    modalInit();
                }
            });

            return false;
        });
    </script>
{% endblock %}

{% block content %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Title</th>
            <th>primaryLanguage</th>
            <th>secondaryLanguage</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for vocabulary in vocabularies %}
            <tr>
                <td>
                    <a href="{{ path('vocabulary_view', {'vocabularyId': vocabulary.vocabularyId}) }}">
                        {{ vocabulary.title }}
                    </a>
                </td>
                <td>{{ vocabulary.primaryLanguage.name }}</td>
                <td>{{ vocabulary.secondaryLanguage.name }}</td>
                <td>
                    {% spaceless %}
                    <a class="load-modal"
                       data-url="{{ path('vocabulary_edit', {'vocabularyId': vocabulary.vocabularyId}) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    &nbsp;
                    <a class="link-as-form" data-method="delete"
                       href="{{ path('vocabulary_delete', {'vocabularyId': vocabulary.vocabularyId}) }}">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                    {% endspaceless %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-primary load-modal" data-url="{{ path('vocabulary_add') }}">
        Add Vocabulary
    </button>
{% endblock %}
