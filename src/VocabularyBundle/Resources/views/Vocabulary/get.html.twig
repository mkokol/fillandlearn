{% extends "::base.html.twig" %}

{% block title %}Vocabulary.{% endblock %}
{% block javascripts %}
    <script>
        $('.link-as-form').click(function () {
            var $form = $('<form/>').hide();
            $form.attr({
                'action': $(this).attr('href'),
                'method': 'post'
            });
            $form.append($('<input/>', {
                type: 'hidden',
                name: '_method'
            }).val($(this).data('method')));

            if ($(this).data('csrf')) {
                var csrf = $(this).data('csrf').split(':');
                $form.append($('<input/>', {
                    type: 'hidden',
                    name: csrf[0]
                }).val(csrf[1]));
            }

            $(this).parent().append($form);

            $form.submit();

            return false;
        });
    </script>
{% endblock %}

{% block content %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Title</th>
            <th>primaryLanguage</th>
            <th>secondaryLanguage</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for vocabulary in vocabularies %}
            <tr>
                <td>{{ vocabulary.title }}</td>
                <td>{{ vocabulary.primaryLanguage.name }}</td>
                <td>{{ vocabulary.secondaryLanguage.name }}</td>
                <td>
                    {% spaceless %}
                    <a class="link-as-form" data-method="delete"
                       href="{{ path('vocabulary_delete', {'vocabularyId': vocabulary.vocabularyId}) }}">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                    {% endspaceless %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
        Add Vocabulary
    </button>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                </div>
                {{ form_start(form) }}
                <div class="modal-body">
                    <div class="form-group">
                        {{ form_label(form.title) }}
                        {{ form_errors(form.title) }}
                        {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.primaryLanguage) }}
                        {{ form_errors(form.primaryLanguage) }}
                        {{ form_widget(form.primaryLanguage, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.secondaryLanguage) }}
                        {{ form_errors(form.secondaryLanguage) }}
                        {{ form_widget(form.secondaryLanguage, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
