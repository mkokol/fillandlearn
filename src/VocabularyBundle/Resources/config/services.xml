<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
    http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="form.language"
            class="VocabularyBundle\Form\LanguageFormType">
            <tag name="form.type" alias="choice_language" />
        </service>

        <service id="form.vocabulary"
            class="VocabularyBundle\Form\VocabularyFormType">
            <tag name="form.type" alias="vocabulary" />
        </service>
    </services>
</container>