{% extends "::base.html.twig" %}

{% block title %}Home page.{% endblock %}

{% block content %}
    <div class="row" style="padding-top: 30px; padding-bottom: 20px">
        {% if error %}
            <div role="alert" class="alert alert-warning col-xs-6 col-xs-offset-3">
                <strong>
                    <span class="glyphicon glyphicon-warning-sign" aria-hidden="true">
                    Error!
                </strong>
                {{ error.messageKey|trans(error.messageData) }}
            </div>
        {% endif %}

        <div class="mainbox col-xs-6 col-xs-offset-3">
            {{ form_start(form) }}
                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    {{
                        form_widget(
                            form.email,
                            { 'attr': {'class': 'form-control', 'placeholder': "Email Address"} }
                        )
                    }}
                </div>

                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    {{
                        form_widget(
                            form.password,
                            { 'attr': {'class': 'form-control', 'placeholder': "Password"} }
                        )
                    }}
                </div>

                <div class="input-group">
                    <div class="checkbox">
                        <label>
                            <input id="login-remember" type="checkbox" name="remember_me" checked>
                            Remember me
                        </label>
                    </div>
                </div>

                <div style="margin-top:10px" class="form-group">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>

                <div class="form-group" style="border-top: 1px solid #e5e5e5; padding-top:15px; font-size:85%">
                    Don't have an account!
                    <a href="{{ path('user_registration') }}">Sign Up Here</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}