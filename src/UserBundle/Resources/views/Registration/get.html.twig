{% extends "::base.html.twig" %}

{% block title %}Registration page.{% endblock %}

{% block content %}
<div class="container">
    <div class="mainbox col-xs-6 col-xs-offset-3">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.user_name) }}
                {{ form_errors(form.user_name) }}
                {{ form_widget(form.user_name) }}
            </div>

            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}
            </div>

            {% for passwordField in form.password %}
                <div class="form-group">
                    {{ form_label(passwordField) }}
                    {{ form_errors(passwordField) }}
                    {{ form_widget(passwordField) }}
                </div>
            {% endfor %}

            <div class="form-group">
                <button type="submit" class="btn btn-success">Register</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}