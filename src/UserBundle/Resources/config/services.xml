<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
    http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.form.type.user_registration"
            class="UserBundle\Form\UserRegistrationFormType">
            <tag name="form.type" alias="user_registration" />
        </service>

        <service id="app.form.type.user_login"
            class="UserBundle\Form\UserLoginFormType">
            <tag name="form.type" alias="user_login" />
        </service>
    </services>

</container>